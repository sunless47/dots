#!/usr/bin/env bash
#=====================#
# use ai using docker #
#=====================#

# error handling
set -euo pipefail

# start ollama container
llm() {
  docker start ai
  docker exec -it ai ollama run tinydolphin
  # docker exec -it ai /bin/sh -c 'ollama run tinydolphin'
}

# calling function
llm
