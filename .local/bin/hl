#!/usr/bin/env bash
#==================================#
# read specific book in the folder #
#==================================#

# error handling
set -euo pipefail

# get specific book in the directory
specific-book() {
  # list everything with fzf
  book=$(find *.epub *.pdf 2> /dev/null | fzf)

  # stop if no input
  if [[ -z $book ]]; then
    exit
  fi

  # zathura
  zathura "${book}" 2> /dev/null &
}

# calling function
specific-book
