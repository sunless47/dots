#!/usr/bin/env bash
#===================#
# configs navigator #
#===================#

# error handling
set -euo pipefail

# select configs
configs() {
  # target directory
  dire="$HOME/.config/"

  # list everything and open with emacs
  find ${dire} -type f | \
  fzf --keep-right --preview 'bat {1}' | \
  xargs -ro nvim
}

# calling function
configs
