#!/usr/bin/env bash
#===================-===============#
# play specific video in the folder #
#===================================#

# error handling
set -euo pipefail

# play video within the directory
play-vid() {
  # list everything with fzf
  video=$(find *.mkv *.mp4 *.webm 2> /dev/null | fzf)

  # mpv
  mpv --speed=2 --terminal=no "${video}" &
}

# calling function
play-vid
