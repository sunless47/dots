# system
alias ls='exa -1A'
alias ll='exa -Al'
alias l='source ~/.bashrc; clear'
alias dot='/usr/bin/git --git-dir=$HOME/alchemy/stash/dotbare/ --work-tree=$HOME'
# ranger
alias rr='ranger --choosedir=$HOME/.rangerdir; LASTDIR=`cat $HOME/.rangerdir`; cd "$LASTDIR"'
# pacman
alias i="sudo pacman -S"
