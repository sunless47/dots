alias ls='exa -1A'
alias ll='exa -Al'
alias l='clear && source ~/.bashrc'
alias i='sudo pacman -S'

alias dot='/usr/bin/git --git-dir=$HOME/alchemy/stash/dotbare/ --work-tree=$HOME'
alias not='/usr/bin/git --git-dir=$HOME/alchemy/stash/dotnotes/ --work-tree=$HOME'
