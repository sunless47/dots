alias rr='ranger --choosedir=$HOME/.rangerdir; LASTDIR=`cat $HOME/.rangerdir`; cd "$LASTDIR"'
alias code='code --extensions-dir $HOME/.config/vscode/extensions/ --user-data-dir $HOME/.config/vscode/user'
alias k8s='minikube kubectl --'
alias f='watch --no-title --color --interval 5 --exec fortune'
